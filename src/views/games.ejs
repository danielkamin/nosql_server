<!DOCTYPE html>
<html lang="en" >
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gry</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link href="css/styles.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js" integrity="sha512-bZS47S7sPOxkjU/4Bt0zrhEtWx0y0CRkhEp8IckzK+ltifIIE9EMIMTuT/mEzoIMewUINruDBIR/jJnbguonqQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>
<body class="d-flex text-center text-white bg-dark flex-column">
    <%- include('nav.ejs') %>
    <main class="cover-container d-flex w-75 h-100 p-3 mx-auto flex-column justify-content-center align-items-center">
        <div class="shadow p-4 bg-dark bg-secondary bg-dark-secondary custom-border">
            <div class="d-flex ">
                <a class="btn btn-outline-light" href="/gry/dodaj">Dodaj</a>
            </div>
            <table class="table text-light my-3">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Release Data</th>
                        <th scope="col">Studio</th>
                        <th scope="col">Avg Rating</th>
                        <th scope="col">Delete</th>
                        <th scope="col">Update</th>
                    </tr>
                </thead>
                <tbody>
                    <% games.forEach(function(game){
                    %>
                        <tr>
                            <td>
                                <a href='/gry/<%= game._id%>' class="link-light">
                                    <%= game.title%>
                                </a>
                            </td>
                            <td><%= new Date(game.releaseDate).toLocaleDateString()%></td>
                            <td><%= game.studio%></td>
                            <td><%if(game.avgRating!==null) {%>
                                <%= Math.round(game.avgRating.avgRating*100)/100%>
                                <%}else{%>
                                Brak danych
                                <%}%>
                            </td>
                            <td>
                                <a class='text-danger-secondary  span-action'  id='<%= game._id%>' href='/gry/<%= game._id%>/usun'>Usu≈Ñ</a>
                            </td>
                            <td>
                                <a class='text-action-secondary ' href='/gry/<%= game._id%>/aktualizuj'>Aktualizuj</a>
                            </td>
                        </tr>
                    <%})%>
                </tbody>
            </table>
        </div>
    </main>
    
</body>
</html>